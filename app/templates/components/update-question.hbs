{{#if updateQuestionForm}}
  <h4>Change {{question.author}}'s question</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="corpse">Question</label>
          {{input value=corpse id="corpse"}}
        </div>

        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Change Question</button>
{{/if}}
