{{#if addNewQuestion}}
  <h1>New Question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="corpse">Question</label>
          {{input value=corpse id="corpse"}}
        </div>

        <div class="form-group">
          <label for="author">Your Name</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="notes">Additional details</label>
          {{input value=notes id="notes"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>    
{{else}}
  <button {{action 'questionFormSHow'}}>New Question</button>
{{/if}}
